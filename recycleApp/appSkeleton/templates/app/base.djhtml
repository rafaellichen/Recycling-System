
<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
      Easy Recycle
    </title>
    {% load static %}
    <link rel="stylesheet" href="{% static "css/bootstrap.min.css" %}">
    <link rel="stylesheet" href="{% static "css/jquery-ui.min.css"%}">
    <link rel="stylesheet" href="{% static "css/jquery-ui.structure.min.css"%}">
    <link rel="stylesheet" href="{% static "css/jquery-ui.theme.min.css" %}">
    <link href="{% static "css/font-awesome.min.css" %}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
    <link href="{% static "css/grayscale.css" %}" rel="stylesheet">

    <!-- /*<style type="text/css">
      .limtiCharClass {

        overflow:hidden;
        white-space:nowrap;
        width: 242px; }
    </style>*/ -->


  </head>
  <body>
<div class="container">

{# navbar-toggleable-md #}
      <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark " >
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/">Easy Recycle</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Explore</a>
              <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="/explore/services">Services</a>
                <a class="dropdown-item" href="/explore/option2">Option2</a>
                <a class="dropdown-item" href="/explore/option3">Option3</a>

              </div>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {% if request.user.is_anonymous != True %}
            <li class="nav-item"><a class="nav-link" href="/profile"><span class="glyphicon glyphicon-user"></span>Profile</a></li>
            <li class="nav-item"><a class="nav-link" id="logout" href="#"><span class="glyphicon glyphicon-user"></span>Logout</a></li>
            {% else %}
            <li class="nav-item"><a class="nav-link" href="/signup"><span class="glyphicon glyphicon-user"></span>Signup</a></li>
            <li class='nav-item'><a class="nav-link"href="/login"><span class="glyphicon glyphicon-log-in"></span>Login</a></li>
            {% endif %}
          </ul>
        </div>
      </nav>


        {% block body%}
        {% endblock body %}

        <!-- Footer -->
        <footer>
            <div class="container text-center">
                <p>Copyright &copy; CSC473 2017</p>
            </div>
        </footer>

  </div>





  {% load static %}
  <script src="{% static "js/jquery-3.2.1.js" %}" type='text/javascript'></script>
  <script src="{% static "js/tooltip.js" %}" type='text/javascript'></script>
  <script src="{% static "js/popper.js" %}" type='text/javascript'></script>
  <script src= "{% static "js/bootstrap.min.js" %}" type='text/javascript'></script>
  <script src= "{% static "js/jquery-ui.min.js" %}" type="text/javascript"></script>



  <script type="text/javascript">

  {% if request.user.is_anonymous != True %}

    ;(function() {
      $('#logout').click(function() {
        $.post("/logout", function() {
          window.location.href = '/';
        });
      });
    })();

  {% else %}

  $(function() {
  $('#trigger').click(function(e) {
    e.preventDefault();
    var dialog = $('<p>Registration Required. Already a member?</p>').dialog({
        buttons: {
            "Login": function() { window.location.replace("/login");},
            "Signup":  function() {window.location.replace("/signup");},
            "Close":  function() {
                dialog.dialog('close');
              }
          }
      });
  });
  });

  {% endif %}
  </script>

</body>

</html>
